---
import BaseLayout from "@/layouts/BaseLayout.astro";
const title = "EAVEN • Agence de marketing digital";
const description = "Sites web, SEO, Ads, contenu, analytics, automations & formation pour indépendants et PME.";
---
<BaseLayout {title} {description}>
  <!-- HERO : photo de route + dégradé animé + panneau KPI -->
  <section
    class="hero bg-gradient"
    style="--hero-img:url('https://images.unsplash.com/photo-1501785888041-af3ef285b470?q=80&w=2000&auto=format&fit=crop')">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="kicker">MARKETING DIGITAL & PERFORMANCE</p>
        <h1 style="color:#fff">Des expériences sobres qui convertissent.</h1>
        <p class="lead" style="color:#F2F7F5">
          EAVEN accompagne les indépendants & PME sur l’ensemble du cycle digital :
          <strong>site rapide</strong>, <strong>SEO</strong>, <strong>campagnes Ads</strong>, <strong>contenu & social</strong>,
          <strong>analytics & data</strong>, <strong>automations/CRM</strong> et <strong>formation</strong>.
        </p>
        <div class="hero__cta">
          <a class="btn btn--white" href="#audit">Audit gratuit</a>
          <a class="btn btn--ghost" href="/contact">Contact</a>
        </div>
      </div>

      <aside class="card panel" aria-label="Indicateurs clés">
        <div class="panel__row"><strong class="panel__num">+320%</strong><span class="panel__lbl">trafic organique</span></div>
        <div class="panel__row"><strong class="panel__num">2.8x</strong><span class="panel__lbl">taux de conversion</span></div>
      </aside>
    </div>

    <!-- Vague douce (fondu vert → beige) -->
    <div class="hero__wave" aria-hidden="true">
      <svg viewBox="0 0 1440 160" preserveAspectRatio="none">
        <path class="wave-fill" d="M0,112 C240,156 520,86 720,108 C980,140 1180,98 1440,122 L1440,160 L0,160 Z"/>
      </svg>
    </div>
  </section>

  <!-- Prestations (cards avec images adoucies) -->
  <section class="section warm-section reveal">
    <div class="container">
      <div class="section__head">
        <div>
          <p class="kicker">Nos prestations</p>
          <h2>Concentrez-vous sur votre activité</h2>
          <p class="lead">Des offres claires qui couvrent tout le cycle : site, acquisition, contenu, mesure, automatisation.</p>
        </div>
        <a class="btn btn--outline" href="/prestations">Tout voir</a>
      </div>

      <div class="grid grid--3">
        <article class="imgcard">
          <img class="imgcard__media"
               src="https://images.unsplash.com/photo-1527689368864-3a821dbccc34?q=80&w=1400&auto=format&fit=crop"
               alt="Création de site — bureau avec wireframes et maquettes" loading="lazy" />
          <div class="imgcard__overlay">
            <span class="imgcard__badge">Web</span>
            <h3 class="imgcard__title">Création de site</h3>
            <p class="imgcard__desc">Design sobre, mobile-first, Core Web Vitals. CMS simple.</p>
          </div>
        </article>

        <article class="imgcard">
          <img class="imgcard__media"
               src="https://images.unsplash.com/photo-1556157382-97eda2d62296?q=80&w=1400&auto=format&fit=crop"
               alt="SEO & contenu — tableaux d’audience" loading="lazy" />
          <div class="imgcard__overlay">
            <span class="imgcard__badge">SEO</span>
            <h3 class="imgcard__title">SEO & contenu</h3>
            <p class="imgcard__desc">Technique, sémantique & maillage. Feuille de route éditoriale.</p>
          </div>
        </article>

        <article class="imgcard">
          <img class="imgcard__media"
               src="https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?q=80&w=1400&auto=format&fit=crop"
               alt="Campagnes Ads — reporting clair" loading="lazy" />
          <div class="imgcard__overlay">
            <span class="imgcard__badge">Ads</span>
            <h3 class="imgcard__title">Campagnes Ads</h3>
            <p class="imgcard__desc">Google / Meta / LinkedIn. A/B testing & suivi conversions.</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- CTA Audit -->
  <section id="audit" class="section reveal">
    <div class="container cta">
      <div>
        <p class="kicker">Audit gratuit</p>
        <h2 class="cta__title">Recevez une mini-feuille de route en 48 h</h2>
        <p class="cta__desc">3 quick wins, points SEO/tech, pistes d’activation + budget indicatif.</p>
      </div>
      <div style="display:flex;gap:12px;flex-wrap:wrap">
        <a class="btn btn--outline" href="/contact#audit">Demander l’audit</a>
        <a class="btn btn--outline" href="/contact">Nous contacter</a>
      </div>
    </div>
  </section>
</BaseLayout>