---
import BaseLayout from "@/layouts/BaseLayout.astro";
const title = "EAVEN • Agence de marketing digital";
const description = "Sites web, SEO, Ads, contenu, analytics, automations & formation pour indépendants et PME.";
---
<BaseLayout {title} {description}>
  <!-- HERO : photo de route + dégradé animé + panneau KPI -->
  <section
    class="hero bg-gradient"
    style="--hero-img:url('https://images.unsplash.com/photo-1501785888041-af3ef285b470?q=80&w=2000&auto=format&fit=crop')">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="kicker">EAVEN AGENCY</p>
        <h2 style="color:#fff">Créons ensemble votre univers digital.</h2>
        <p class="lead" style="color:#F2F7F5">
          EAVEN conçoit des expériences digitales uniques et esthétiques pour donner vie à vos idées et valoriser votre image.<br />
          <strong>Que vous soyez un professionnel ou un particulier, nous transformons vos idées en créations digitales authentiques et durables</strong>.
        </p>
        <div class="hero__cta">
          <a class="btn btn--white" href="/prestations#professionnels">Je suis un professionnel</a>
          <a class="btn btn--ghost" href="/prestations#particuliers">Je suis un particulier</a>
        </div>
      </div>

      <aside class="card panel" aria-label="Indicateurs clés">
        <div class="panel__row"><strong class="panel__num">100%</strong><span class="panel__lbl">projets sur-mesure et accompagnés</span></div>
        <div class="panel__row"><strong class="panel__num">7</strong><span class="panel__lbl">jours en moyenne pour donner vie à votre projet</span></div>
      </aside>
    </div>

    <!-- Vague douce (fondu vert → beige) -->
    <div class="hero__wave" aria-hidden="true">
      <svg viewBox="0 0 1440 160" preserveAspectRatio="none">
        <path class="wave-fill" d="M0,112 C240,156 520,86 720,108 C980,140 1180,98 1440,122 L1440,160 L0,160 Z"/>
      </svg>
    </div>
  </section>

  <!-- Prestations (cards avec images adoucies) -->
  <section class="section warm-section reveal">
    <div class="container">
      <div class="section__head">
        <div>
          <p class="kicker">Nos prestations</p>
          <h2>Le digital à votre image</h2>
          <p class="lead">Nous concevons des solutions digitales sur mesure pour donner vie à vos idées et valoriser votre image.</p>
        </div>
        <a class="btn btn--outline" href="/prestations">Tout voir</a>
      </div>

      <div class="grid grid--3">
        <article class="imgcard">
          <img class="imgcard__media"
               src="https://images.unsplash.com/photo-1527689368864-3a821dbccc34?q=80&w=1400&auto=format&fit=crop"
               alt="Création de site — bureau avec wireframes et maquettes" loading="lazy" />
          <div class="imgcard__overlay">
            <span class="imgcard__badge">Web</span>
            <h3 class="imgcard__title">Création de site</h3>
            <p class="imgcard__desc">Site professionel, Site évènementiel, Site E-commerce </p>
          </div>
        </article>

        <article class="imgcard">
          <img class="imgcard__media"
               src="https://images.unsplash.com/photo-1556157382-97eda2d62296?q=80&w=1400&auto=format&fit=crop"
               alt="SEO & contenu — tableaux d’audience" loading="lazy" />
          <div class="imgcard__overlay">
            <span class="imgcard__badge">SEO</span>
            <h3 class="imgcard__title">SEO</h3>
            <p class="imgcard__desc">Audit, Reférencement, Trafic qualifié</p>
          </div>
        </article>

        <article class="imgcard">
          <img class="imgcard__media"
               src="https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?q=80&w=1400&auto=format&fit=crop"
               alt="Campagnes Ads — reporting clair" loading="lazy" />
          <div class="imgcard__overlay">
            <span class="imgcard__badge">COM</span>
            <h3 class="imgcard__title">Communication digitale</h3>
            <p class="imgcard__desc">Création de contenu, Identité visuelle, Rédaction web, Articles de blogs</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- CTA Audit -->
  <section id="audit" class="section reveal">
    <div class="container cta">
      <div>
        <p class="kicker">Devis Gratuit</p>
        <h2 class="cta__title">Nous contacter</h2>
        <p class="cta__desc">Une idée de projet, une question ? Contactez-nous et donnons vie à votre univers digital. </p>
      </div>
      <div style="display:flex;gap:12px;flex-wrap:wrap">
        <a class="btn btn--outline" href="/contact#audit">Demander un devis</a>
        <a class="btn btn--outline" href="/contact">Nous contacter</a>
      </div>
    </div>
  </section>
</BaseLayout>
